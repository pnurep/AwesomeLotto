<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#ffffff</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">#1f1f1f</item>
        <item name="android:textColor">#1f1f1f</item>
        <item name="android:colorBackground">#ffffff</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:fontFamily">@font/noto_sans</item>
    </style>

    <style name="Toolbar.Base" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="contentInsetStart">?attr/actionBarSize</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="contentInsetEndWithActions">0dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">-0.04</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Toolbar.Main" parent="Toolbar.Base">
        <item name="android:contentInsetLeft">16dp</item>
        <item name="android:contentInsetStart">16dp</item>
        <item name="android:contentInsetRight">16dp</item>
        <item name="android:contentInsetEnd">16dp</item>
        <item name="contentInsetLeft">16dp</item>
        <item name="contentInsetStart">16dp</item>
        <item name="contentInsetRight">16dp</item>
        <item name="contentInsetEnd">16dp</item>
    </style>

</resources>